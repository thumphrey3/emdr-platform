<!DOCTYPE html>
<html>
<head>
  <title>VR Platform</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container-fluid">
	<%= nav_bar fixed: :top, brand: "Mandala VR Therapy", responsive: false do %>
	    <%= menu_group do %>
	        <%= menu_item "Home", patients_path %>
	        <%= menu_divider %>
	        <%= menu_item "Calendar", sessions_path %>
	        <%= menu_divider %>
	        <%= menu_item "Patient Reports", patients_path %>
	    <% end %>

	    <%= menu_group pull: :right do %>
	     	<%=menu_text "VR Administration Instructions" %>
	    <% end %>
	<% end %>
	</div>



	<div class="container-fluid">

	<%= yield %>
	
	</div>
</body>
</html>

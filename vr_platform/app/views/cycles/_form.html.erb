<%= simple_form_for @cycle, remote: true do |f| %>
	<%= f.association :session_id, :label_method => :session_label, :value_method => :id %>
    <%= f.input :picture, label: 'Picture', placeholder: 'Description of memory for target event' %>
    <%= f.input :negativecognition, label: 'Negative Cognition', placeholder: 'Negative Cognition' %>
    <%= f.input :positivecognition, label: 'Positive Cognition', placeholder: 'Positive Cognition' %>
    <%= f.input :initial_voc, label: 'Initial Validity of Cognition for Positive Cognition (1-7)', collection: 1..7 %>
    <%= f.input :emotion, label: 'Emotion', placeholder: 'Description of emotions when picturing target event and stating negative cognition' %>
    <%= f.input :initial_sud, label: 'Initial Subjective Units of Distress (SUD)', collection: 0..10 %>
    <%= f.input :body_location, label: 'Location of Body Sensation', placeholder: 'Description of body sensation' %>
    <%= f.button :submit %>
    
<% end %>
